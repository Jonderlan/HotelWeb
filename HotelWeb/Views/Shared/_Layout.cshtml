@inject Microsoft.AspNetCore.Identity.SignInManager<Usuario> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<Usuario> UserManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-route-id="0">Hotel WEB</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Gerenciar Quarto</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="TipoQuarto" asp-action="Create" asp-route-id="0">Cadastrar tipo de Quarto</a>
                        <a class="dropdown-item" asp-controller="TipoQuarto" asp-action="Index" asp-route-id="0">Listar tipo de Quarto</a>
                        <a class="dropdown-item" asp-controller="Quarto" asp-action="Cadastrar" asp-route-id="0">Cadastro Quarto</a>
                        <a class="dropdown-item" asp-controller="Quarto" asp-action="Index" asp-route-id="0">Listar Quartos</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Gerenciar de Reservas</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="Reserva" asp-action="Create" asp-route-id="0">Cadastrar Reserva</a>
                        <a class="dropdown-item" asp-controller="Reserva" asp-action="Index" asp-route-id="0">Listar tipo de Quarto</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Gerenciar Usuário</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Create" asp-route-id="0">Cadastrar Usuario</a>
                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Index" asp-route-id="0">Listar Usuários</a>
                    </div>
                </li>
            </ul>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">

                    @if (SignInManager.IsSignedIn(User)) {
        <li class="nav-item active">
            <a class="btn btn-danger" asp-action="Logout" asp-controller="Usuario">Logout</a>
        </li> } else {
        <li class="nav-item active">
            <a class="btn btn-warning" asp-action="Login" asp-controller="Usuario">Login</a>
        </li>}

                </ul>
            </div>
        </div>
    </nav>


    <div class="conteudo">
        @RenderBody()
    </div>

    <hr />

    <footer class="jumbotron text-center" style="margin-bottom:0">
        <p>
            Sistemas para Hotel - @DateTime.Now.Year - &copy;
        </p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>

</body>
</html>
