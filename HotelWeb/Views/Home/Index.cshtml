@model List<Quarto>

@{ List<TipoQuarto> tipoQuartos = ViewBag.TipoQuartos; }

<div class="container" style="margin-top:30px" />
<div class="row">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <h3>Conforto</h3>
                <p>Quartos confortáveis com ambientes limpos e acolhedores, confira</p>
                <p>Cama com muito espaço para você e sua família, não perca tempo apareça</p>
            </div>
            <div class="col-sm-4">
                <h3>Tecnologia</h3>
                <p>Todos os espaços do hotel são equipados com Wi-fi de muita velocidade</p>
                <p>Ao se cadastrar para estadias com mais de 10 você recebe um tablet</p>
            </div>
            <div class="col-sm-4">
                <h3>Alimentação</h3>
                <p>Temos os mais renomados cozinheiros do mundo, pessoas que amam o que fazem</p>
                <p>Pensão completa, café da manhã, almoço, café da tarde e janta, e muitos sucos !!!</p>
            </div>
        </div>
    </div>


</div>
<br />
<div id="tipoQuartos" class="div-tipoQuarto">
    @foreach (TipoQuarto tipoQuartoCadastrado in tipoQuartos) {
<a class="link-tipoQuarto" asp-action="Index" asp-controller="Home"
   asp-route-id="@tipoQuartoCadastrado.Id">
    @tipoQuartoCadastrado.Nome
</a>}
</div>
<br />
<div id="quartos" class="row">
    @foreach (Quarto quartoCadastrado in Model) {
    <div class="col-sm-3 div-conteudo">
        <img src="~/images/@quartoCadastrado.Imagem" alt="@quartoCadastrado.Descricao"
             style="width:220px;height:200px" class="img-thumbnail" />
        <br />
        <span>@quartoCadastrado.Nome</span>
        <br />
        <span>
            <b>Preço: </b> @quartoCadastrado.Preco.ToString("C2")
        </span>
        <br />
        <br />
        <a class="btn btn-primary" asp-controller="Reserva" asp-action="Create" asp-route-id="0">Reservar</a>
    </div>}
</div>
